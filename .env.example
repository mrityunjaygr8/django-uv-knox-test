# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
# Option 1: Use DATABASE_URL (recommended)
# For Docker: use 'db' as hostname (Docker service name)
DATABASE_URL=postgresql://django_user:django_password@db:5432/django_db
# For local development: use 'localhost' as hostname
# DATABASE_URL=postgresql://django_user:django_password@localhost:5432/django_db

# Option 2: Use individual database settings (if DATABASE_URL is not set)
DB_NAME=django_db
DB_USER=django_user
DB_PASSWORD=django_password
# For Docker: use 'db' as hostname (Docker service name)
DB_HOST=db
# For local development: use 'localhost'
# DB_HOST=localhost
DB_PORT=5432

# Cache Configuration (optional)
# Leave empty to use local memory cache
REDIS_URL=redis://localhost:6379/0

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# CORS Settings (comma-separated list)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Settings (Production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Static Files
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media

# Timezone Configuration
# All datetimes are stored in UTC and converted to user's timezone
# Django automatically handles timezone conversion in templates and forms
# TIME_ZONE is set to UTC in settings - no need to override here
# To change default timezone, modify TIME_ZONE in settings.py
