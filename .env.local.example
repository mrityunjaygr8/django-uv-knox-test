# Django Settings for Local Development
DEBUG=True
SECRET_KEY=your-secret-key-here-for-local-development
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration for Local Development
# Option 1: Use DATABASE_URL (recommended for local PostgreSQL)
DATABASE_URL=postgresql://django_user:django_password@localhost:5432/django_db

# # Option 2: Use individual database settings (if DATABASE_URL is not set)
# DB_NAME=django_db
# DB_USER=django_user
# DB_PASSWORD=django_password
# DB_HOST=localhost
# DB_PORT=5432

# Cache Configuration (optional)
# For local development, you can use Redis or leave empty for memory cache
# REDIS_URL=redis://localhost:6379/0

# CORS Settings (comma-separated list)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# Email Configuration for Local Development
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Security Settings (Local Development - Less Strict)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Static and Media Files (Local Development)
STATIC_ROOT=./staticfiles
MEDIA_ROOT=./media

# Timezone Configuration
# All datetimes are stored in UTC and converted to user's timezone
# Django automatically handles timezone conversion in templates and forms
# TIME_ZONE is set to UTC in settings - no need to override here
